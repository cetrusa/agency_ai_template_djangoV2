# ======================================================
# DJANGO
# ======================================================
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=dev-secret-key-change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ======================================================
# DATABASE SELECTION
# ======================================================
# Opción 1: SQLite (Por defecto para desarrollo local rápido)
# No requiere instalación de servidores adicionales.
# DJANGO_DB_ENGINE=django.db.backends.sqlite3
# DJANGO_DB_NAME=db.sqlite3

# Opción 2: PostgreSQL (Recomendado / Docker)
# Usado por defecto en docker-compose.
# DJANGO_DB_ENGINE=django.db.backends.postgresql
# DJANGO_DB_NAME=agency_db
# DJANGO_DB_USER=agency_user
# DJANGO_DB_PASSWORD=agency_pass
# DJANGO_DB_HOST=localhost
# DJANGO_DB_PORT=5432

# Opción 3: MySQL / MariaDB (Ej. Laragon / XAMPP)
# Requiere: pip install mysqlclient
# Para Docker usando base de datos del host (Laragon): Usar DJANGO_DB_HOST=host.docker.internal
DJANGO_DB_ENGINE=django.db.backends.mysql
DJANGO_DB_NAME=agency_db
DJANGO_DB_USER=root
DJANGO_DB_PASSWORD=
DJANGO_DB_HOST=host.docker.internal
DJANGO_DB_PORT=3306

# ======================================================
# REDIS (OPCIONAL)
# ======================================================
REDIS_URL=redis://redis:6379/0

# ======================================================
# EMAIL (DEV - consola)
# ======================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ======================================================
# STATIC / MEDIA
# ======================================================
STATIC_URL=/static/
MEDIA_URL=/media/

# ======================================================
# MODO PLATAFORMA
# ======================================================
ENVIRONMENT=development
PLATFORM_NAME=Agency AI Platform
